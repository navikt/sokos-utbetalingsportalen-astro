---
import { Alert } from '@navikt/ds-react';
import { getMicrofrontendConfig } from 'src/microfrontend';
import { hasAccessToAdGroup } from 'src/utils/common';
import {
  fetchMicrofrontendAdGroup,
  fetchMicrofrontendBundle,
} from 'src/utils/server/common';
import Microfrontend from '../components/microfrontend/Microfrontend';
import Layout from '../layouts/Layout.astro';
import NoAccess from './NoAccess.astro';

const oppdragsinfo = getMicrofrontendConfig('oppdragsinfo');

const hasAccess = hasAccessToAdGroup(
  Astro.locals.userInfo.adGroups,
  fetchMicrofrontendAdGroup({
    adGroupDevelopment: oppdragsinfo.adGroupDevelopment,
    adGroupProduction: oppdragsinfo.adGroupProduction,
  }),
);
---

<Layout>
  <div>
    {
      hasAccess ? (
        <Microfrontend
          url={fetchMicrofrontendBundle(oppdragsinfo.naisAppName)}
          userData={Astro.locals.userInfo}
          client:only="react"
        />
      ) : (
        <NoAccess />
      )
    }
  </div>
</Layout>
