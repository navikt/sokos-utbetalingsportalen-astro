---
import { ChatExclamationmarkIcon } from '@navikt/aksel-icons';
import { BodyShort, Heading, Link } from '@navikt/ds-react';
import styles from './_ErrorPage.module.css';
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <div class={styles['error-page']}>
    <ChatExclamationmarkIcon
      title="Chat exclamationmark ikon"
      fontSize="6rem"
    />
    <Heading level="1" size={'medium'}> Siden finnes ikke </Heading>
    <BodyShort>En eller annen tekst</BodyShort>
    <Link href="/" variant="action"> Tilbake til startsiden </Link>
  </div>
</Layout>
